<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" 
        android:gravity="center">

      <Button
            android:id="@+id/startStationUpdate"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="开始station升级" />
      <Button
            android:id="@+id/startControllerUpdate"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="开始controller升级" />
      
      <Button
            android:id="@+id/startSTM32Update"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="开始STM32升级" />

        <Button
            android:id="@+id/getStationVersion"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="获取station版本号" />
        
        <Button
            android:id="@+id/getControllerVersion"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="获取手柄版本号" />
       
        
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal" >
        
         <Button
            android:id="@+id/enterPair1"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="配对1" />
        <Button
            android:id="@+id/enterPair2"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="配对2" />   
        <Button
            android:id="@+id/isenterPair"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="查询配对状态" />  
        <Button
            android:id="@+id/vibrate"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="手柄震动" />     
            <Button
            android:id="@+id/cancelvibrate"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="取消震动" />     
        
        <Button
            android:id="@+id/unbindController"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="解绑手柄" />
        
        <Button
            android:id="@+id/shutdownController"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:text="关闭手柄" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/progressshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="升级进度:"
        android:textSize="30dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="30dp"
        android:visibility="invisible" />

</LinearLayout>